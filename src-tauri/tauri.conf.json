{
    "build": {
        "beforeDevCommand": "yarn build-server && yarn dev-client",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Vla",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true,
                "scope": [
                    {
                        "name": "binaries/csharp",
                        "sidecar": true
                    }
                ]
            }
        },
        "bundle": {
            "active": true,
            "targets": "msi",
            "identifier": "somfic.dev.vla",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [
                "uiohook.dll"
            ]
        },
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true,
        "windows": [
            {
                "title": "Vla",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "transparent": true,
                "decorations": true
            }
        ]
    }
}